{
  "name": "@d4mr/t2z",
  "version": "0.0.1",
  "description": "Production-ready TypeScript SDK for sending from Transparent to shielded (Zero-knowledge) addresses on Zcash with Orchard support",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "browser": "./dist/index.mjs"
    }
  },
  "browser": {
    "./dist/index.js": "./dist/index.mjs"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts --clean",
    "build:napi": "cd ../../wrapper && cargo build --release --features napi-bindings && napi build --release",
    "build:wasm": "cd ../../wrapper && wasm-pack build --target web --out-dir pkg --features napi-bindings",
    "build:all": "npm run build:napi && npm run build:wasm && npm run build",
    "dev": "tsup src/index.ts --format cjs,esm --dts --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:node": "vitest run --environment node",
    "test:browser": "vitest run --environment jsdom",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "prepublishOnly": "npm run build:all"
  },
  "keywords": [
    "zcash",
    "t2z",
    "transparent-to-zero-knowledge",
    "orchard",
    "privacy",
    "cryptocurrency",
    "zero-knowledge",
    "zk-snark",
    "halo2",
    "shielded",
    "transparent",
    "pczt"
  ],
  "author": "d4mr",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/d4mr/t2z.git",
    "directory": "sdks/typescript"
  },
  "dependencies": {
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@napi-rs/cli": "^2.18.0",
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.55.0",
    "jsdom": "^23.0.0",
    "tsup": "^8.0.1",
    "typescript": "^5.3.3",
    "vitest": "^1.0.4",
    "vite-plugin-wasm": "^3.3.0",
    "vite-plugin-top-level-await": "^1.4.1"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
